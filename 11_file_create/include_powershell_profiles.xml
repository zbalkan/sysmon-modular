                    <TargetFilename condition="end with">\Documents\PowerShell\Microsoft.PowerShell_profile.ps1</TargetFilename>
                    <TargetFilename condition="end with">C:\Program Files\PowerShell\7\Profile.ps1</TargetFilename>
